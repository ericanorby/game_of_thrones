<div class="flex-space">
  <p><span>&#8606; </span><%= link_to "Back", houses_path %></p>
  <p><%= link_to "Add Character", new_house_character_path(@house) %><span> +</span></p>
</div>

<h1><%= @house.name %></h1>

<div class="flex">
  <% @characters.each do |character| %>
    <div class="container">
      <p><%= link_to character.name, house_character_path(@house, character) %></p>
      <img class="small-photo" src="<%= character.photo_url %>">
    </div>
  <% end %>
</div>
